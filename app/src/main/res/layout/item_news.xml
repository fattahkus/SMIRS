<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:elevation="8dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/healthy"
                android:id="@+id/thumbnailProduct"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY"
                android:focusable="true" />


            <TextView
                android:textStyle="bold"
                android:text="Soto Lamongan"
                android:id="@+id/titleNews"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnailProduct"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


            <RatingBar
                android:rating="4"
                android:id="@+id/ratingProduct"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleNews"
                android:paddingLeft="10dp"
                android:progressTint="@android:color/holo_orange_light"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="12dp" />

            <TextView
                android:text="Soto Lamongan"
                android:id="@+id/lineNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingProduct"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>